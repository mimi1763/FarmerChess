<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
    </startup>
    <appSettings>
      <!-- Board and block dimensions -->
      <add key="nbrBlockCountX" value="10"/>
      <add key="nbrBlockCountY" value="10"/>
      <add key="nbrBlockSize" value="30"/>
      <add key="nbrLineThickness" value="1"/>
      <!-- Colours -->
      <add key="BgColour" value="#dddddd"/>
      <add key="GridColour" value="#666666"/>
      <!-- Images -->
      <add key="XImagePath" value="Images/x.png"/>
      <add key="OImagePath" value="Images/o.png"/>

      <add key="nbrUseTestGrid" value="0"/>
      <add key="nbrDebugMode" value="1"/>
    </appSettings>
</configuration>
